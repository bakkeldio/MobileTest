<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="105dp"
    android:layout_height="105dp"
    android:paddingStart="10dp"
    android:paddingBottom="10dp">


    <ImageView
        android:id="@+id/studentLogo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_avatar_no_photo_100_100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/deleteIcon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:background="@drawable/ic_delete_with_ripple"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@id/studentLogo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/studentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/studentLogo"
        tools:text="Орозбеков Б" />

</androidx.constraintlayout.widget.ConstraintLayout>