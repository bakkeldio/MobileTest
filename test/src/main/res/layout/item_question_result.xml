<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingVertical="10dp">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/questionAnswers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:nestedScrollingEnabled="false"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/questionTextView"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/pointTextView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/border_bg_red_500"
        android:elevation="1dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="10.0" />

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_bg_gray"
        android:maxLines="4"
        android:paddingVertical="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="30dp"
        android:textAppearance="@style/Text_16_main_text_color"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1. What is the highest mountain in the world? aldlkasndkl" />

    <TextView
        android:id="@+id/openQuestionText"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_outlined_gray"
        android:scrollbars="vertical"
        android:textColor="@color/main_text_color"
        android:paddingVertical="10dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/questionTextView"
        tools:text="Hello World "/>

    <TextView
        android:id="@+id/correctAnswerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border_bg_green"
        android:padding="20dp"
        android:textColor="@color/main_text_color"
        app:layout_constraintTop_toBottomOf="@id/questionAnswers"
        tools:text="sdnlaknd klasnkldasnkl dnaksnd kanlkdankd klal kandklandkl an asd mkland."
        tools:visibility="gone" />


</androidx.constraintlayout.widget.ConstraintLayout>