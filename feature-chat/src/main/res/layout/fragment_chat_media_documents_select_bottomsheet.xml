<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_home_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_home_indicator"
        tools:ignore="ContentDescription" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/makePhotoBtn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="start|center_vertical"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/camera"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:icon="@drawable/ic_fluent_camera_20_regular"
        app:iconPadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/image_home_indicator"
        app:textAllCaps="false" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_color"
        app:layout_constraintTop_toBottomOf="@id/makePhotoBtn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/selectPhotoBtn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp"
        android:gravity="start|center_vertical"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/photo_video"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:icon="@drawable/ic_ei_image"
        app:iconPadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/makePhotoBtn"
        app:textAllCaps="false" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_color"
        app:layout_constraintTop_toBottomOf="@id/selectPhotoBtn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/selectDocumentBtn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp"
        android:gravity="start|center_vertical"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/document"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:icon="@drawable/ic_carbon_document_blank"
        app:iconPadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/selectPhotoBtn"
        app:textAllCaps="false" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_color"
        app:layout_constraintTop_toBottomOf="@id/selectDocumentBtn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/selectContactBtn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp"
        android:gravity="start|center_vertical"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/contact"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:icon="@drawable/ic_fluent_contact_card_16_regular"
        app:iconPadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/selectDocumentBtn"
        app:textAllCaps="false" />

</androidx.constraintlayout.widget.ConstraintLayout>