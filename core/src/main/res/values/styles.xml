<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text_18_main_color">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text_15_main_color">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorControlNormal">?attr/colorPrimary</item>
        <item name="android:editTextColor">@color/main_text_color</item>
    </style>

    <style name="Text_16_main_text_color" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="Text_18_main_text_color" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textAppearance">@style/Text_16_main_text_color</item>
        <item name="maxLines">3</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:textAppearance">@style/Text_16_main_text_color</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="maxLines">3</item>
    </style>

    <style name="MaterialToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="materialThemeOverlay">@style/AppTheme.AppBarOverlay</item>
        <item name="titleTextColor">@color/main_text_color</item>
    </style>



</resources>